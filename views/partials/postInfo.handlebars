

<div class="card mb-3">
    <div class="card-header">
        <a href="/post/{{id}}" class="card-link">
            <h2>{{title}}</h2>
        </a>
        <h6>Posted by {{user.name}} on {{format_date date_created}}</h6>
    </div>
    <div class="card-body">
        <p>{{content}}</p>
    </div>
    {{#each comments as |comment|}}
    <div class="ml-4 mb-4">
        <div class="">
            <h6 class="">Comment posted by {{user.name}} on {{format_date date_created}}</h6>
            <p class="text-right">{{comment.text}}</p>
        </div>
    </div>
    {{/each}}  

</div>

